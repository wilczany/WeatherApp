.container.my-4
    = link_to sensor_path(sensor) do
        article.message class=("is-#{sensor.on? ? 'success' : 'danger'}")
            .message-header
                p Czujnik: #{ sensor.name}
                p = sensor.translated_location
            .message-body
                .level 
                    - if sensor.on?
                        - latest = sensor.latest_weather
                        .level-item.has-text-centered
                            p
                                | Temperatura:
                                br
                                strong #{latest.temperature}°C
                        .level-item.has-text-centered
                            p
                                | Ciśnienie:
                                br
                                strong #{latest.pressure}hPa
                        .level-item.has-text-centered
                            p
                                | Wilgotność:
                                br
                                strong #{latest.humidity} %